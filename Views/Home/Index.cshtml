@{
    ViewData["Title"] = "Log In / Sign Up";
}

<div class="form-control form-control--radio">
    <p class="form-control__error-message">Invalid</p>
    <div class="radio-control">
        <input type="radio" value="m" name="gender" id="male" class="radio-control__radio" required>
        <label for="male" class="radio-control__label label">Male</label>
    </div>
    <div class="radio-control">
        <input type="radio" name="gender" id="female" class="radio-control__radio" required>
        <label for="female" value="f" class="radio-control__label label">Female</label>
    </div>

    <label class="form-control__label label">Label</label>
</div>