                                <option value="1">Keep Fit</option>
                                <option value="2">Loose Weight</option>
                            </select>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="form-group form-group-submit d-flex justify-content-center align-items-center mt-5">
